datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(STUDENT)
  companyId Int?     
  company   Company? @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())
}

model Company {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  users       User[]   // Root + Employees
}

enum Role {
  ADMIN
  STUDENT
  COMPANY_ROOT
  COMPANY_USER
}

